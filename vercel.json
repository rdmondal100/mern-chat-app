{
	"version": 2,
	"builds": [
		{
			"src": "server/index.js",
			"use": "@vercel/node",
			"config": { "helpers": false }
		},
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "client/build"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "server/index.js"
		},
		{
			"src": "/(.*)",
			"dest": "client/$1"
		}
	]
}
